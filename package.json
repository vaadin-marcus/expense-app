{
  "name": "vaadin-expense-manager",
  "version": "3.0.0",
  "description": "Sample PWA showcasing Vaadin components",
  "main": "service-worker.js",
  "dependencies": {
    "express": "^4.16.3",
    "prpl-server": "^1.1.0",
    "redux": "^3.7.2",
    "reselect": "^3.0.1",
    "web-push": "^3.3.0"
  },
  "devDependencies": {
    "gulp": "^3.9.1",
    "gulp-gh-pages": "^0.5.4",
    "eslint": "^4.0.0",
    "eslint-config-vaadin": "latest",
